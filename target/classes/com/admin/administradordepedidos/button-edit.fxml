<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<HBox xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.admin.administradordepedidos.ButtonEditController">
   <children>
      <Button fx:id="buttonDelete" mnemonicParsing="false" onMouseClicked="#clickDelete" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #ff6666;" styleClass="add-btn" stylesheets="@Styles/styles.css" text="Eliminar" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <HBox.margin>
            <Insets left="40.0" right="3.0" />
         </HBox.margin>
      </Button>
      <Button fx:id="buttonEdit" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#clickEdit" prefHeight="50.0" prefWidth="120.0" styleClass="add-btn" stylesheets="@Styles/styles.css" text="Editar" textFill="#828282">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <HBox.margin>
            <Insets left="30.0" />
         </HBox.margin>
      </Button>
   </children>
</HBox>
